<?xml version="1.0" encoding="UTF-8" ?>
<serializer xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://symfony.com/schema/dic/serializer-mapping"
            xsi:schemaLocation="http://symfony.com/schema/dic/serializer-mapping https://symfony.com/schema/dic/serializer-mapping/serializer-mapping-1.0.xsd"
>
    <class name="CodeBuds\SyliusFCMPlugin\Entity\FCMEntityTopic">
        <attribute name="id">
            <group>admin:topic:read</group>
        </attribute>
        <attribute name="topicId">
            <group>admin:topic:read</group>
            <group>shop:topic:read</group>
            <group>shop:topic:create</group>
        </attribute>
        <attribute name="subscriptions">
            <group>admin:topic:read</group>
        </attribute>
        <attribute name="subscribed">
            <group>shop:topic-subscription:toggle</group>
        </attribute>
    </class>
</serializer>
